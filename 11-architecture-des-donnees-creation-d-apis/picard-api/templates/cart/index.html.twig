{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
<style>
    body {
        font-family: Arial, sans-serif;
        background: #f9f9f9;
        color: #333;
        margin: 2rem;
    }
    h1 {
        text-align: center;
        margin-bottom: 2rem;
        color: #2c3e50;
    }
    .cart-container {
        max-width: 700px;
        background: #fff;
        margin: 0 auto;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgb(0 0 0 / 0.1);
    }
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 1.5rem;
    }
    th, td {
        padding: 0.8rem;
        border-bottom: 1px solid #ddd;
        text-align: left;
    }
    th {
        background-color: #ecf0f1;
        color: #34495e;
    }
    .price {
        color: #27ae60;
        font-weight: 700;
    }
    .btn-remove {
        padding: 0.3rem 0.8rem;
        background-color: #c0392b;
        color: #fff;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }
    .btn-remove:hover {
        background-color: #e74c3c;
    }
    .total {
        text-align: right;
        font-weight: 700;
        font-size: 1.2rem;
        color: #2c3e50;
    }
    .empty-cart {
        text-align: center;
        font-style: italic;
        color: #7f8c8d;
    }
</style>

<h1>Mon Panier</h1>

<div class="cart-container">
    {% if cart.cartItems|length > 0 %}
        <table>
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Quantité</th>
                    <th>Prix unitaire</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for item in cart.cartItems %}
                    <tr>
                        <td>{{ item.product.name }}</td>
                        <td>{{ item.quantity }}</td>
                        <td class="price">{{ item.product.price|number_format(2, ',', ' ') }} €</td>
                        <td>
                            <form action="{{ path('app_cart_remove', {'id': item.product.id}) }}" method="post" onsubmit="return confirm('Voulez-vous vraiment supprimer ce produit du panier ?');" style="margin: 0;">
                                <button type="submit" class="btn-remove">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <p class="total">Total : {{ cart.getTotal()|number_format(2, ',', ' ') }} €</p>
    {% else %}
        <p class="empty-cart">Votre panier est vide.</p>
    {% endif %}
    
    <a href="{{ path('app_product') }}" class="back-link">← Retour à la liste des produits</a>
</div>
{% endblock %}
